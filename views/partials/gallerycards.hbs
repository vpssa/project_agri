<div class="container text-center">
    <div class="row" style="display: flex;">
        {{!-- <div class="col-md-4 "> --}}
            {{#each gallery}}
            <div class="card img-fluid aa" style="width: 18rem;">
                <img src="{{this.imageUrl}}" class="card-img-top mt-2 img-fluid" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text hide_scroll">{{this.content}}</p>
                    <a href="{{this.buttonLink}}" class="btn btn-primary">{{this.button}}</a>
                </div>
            </div>
            {{/each}}
        {{!-- </div> --}}
    </div>
</div>